<div class="header" x-data="{ hamMenuOpen: false, loginMenuOpen: false, cartMenuOpen: false }">
  <!-- rendering hamburger menu when opened -->
  {% render 'ham-menu' %}

  <div class="header__annbar">
    <div class="header__annbar--middle-col">
      <p>ğŸšš free delivery over $90</p>
    </div>
    <div class="header__annbar--right-col">
      <div class="header__annbar--flag-wrapper" x-data="{ flagMenuOpen: false }">
        <div class="header__annbar--flag" x-on:click="flagMenuOpen = true">
          {% render 'icon-flag-uk' %}
        </div>
        <div class="header__annbar--flag-menu">
          {% render 'flag-menu' %}
        </div>
      </div>
      <!-- LOGIN MENU -->
      <div class="header-annbar__login-wrapper">
        <button class="header-annbar__login-btn" x-on:click="loginMenuOpen = true">
          {% render 'icon-login' %}
          login
        </button>
        {% render 'login-menu' %}
      </div>
      <!-- CART MENU -->
      <div class="header-annbar__cart-wrapper">
        <button class="header-annbar__cart-btn" x-on:click="cartMenuOpen = true">
          {% render 'icon-cart' %}
          <span class="header-annbar__cart-count">0</span>
        </button>
        {% render 'cart-menu' %}
      </div>
    </div>
  </div>

  <div class="header__menu">
    <div class="header__menu--main-menu">
      <div class="header__menu-ham" x-on:click="hamMenuOpen = true">
        {% render 'icon-ham-menu-open' %}
      </div>
      <div class="header__menu--menu-links">
        <!-- Main menu -->
        {% for link in linklists.main-menu.links -%}
          {{ link.title | link_to: link.url }}
        {%- endfor %}
      </div>
    </div>
    <div class="header__menu-logo">
      {% render 'mclaren-logo' %}
    </div>
  </div>
</div>