<div class="header" x-data="{ hamMenuOpen: false, loginMenuOpen: false }">
  <!-- rendering hamburger menu when opened -->
  {% render 'ham-menu' %}

  <div class="header__annbar">
    <div class="header__annbar--middle-col">
      <p>ğŸšš free delivery over $90</p>
    </div>
    <div class="header__annbar--right-col">
      <div class="header__annbar--flag-wrapper" x-data="{ flagMenuOpen: false }">
        <div class="header__annbar--flag" x-on:click="flagMenuOpen = true">
          {% render 'icon-flag-uk' %}
        </div>
        <div class="header__annbar--flag-menu">
          {% render 'flag-menu' %}
        </div>
      </div>


      <div class="header__annbar--login" x-on:click="loginMenuOpen =! loginMenuOpen">
        {% render 'icon-login' %}
        <p class="header__annbar--login-btn">LOGIN</p>
        {% render 'login-menu' %}
      </div>


      <div x-data="{ cartMenuOpen: false }">
        <div class="header__annbar--cart-menu" x-on:click="cartMenuOpen = true">
          <div class="header__annbar--cart">
            {% render 'icon-cart' %}
          </div>
          <div class="header__annbar--cart-count">
            <span>0</span>
          </div>
        </div>
        {% render 'cart-menu' %}
      </div>
    </div>
  </div>

  <div class="header__menu">
    <div class="header__menu--main-menu">
      <div class="header__menu-ham" x-on:click="hamMenuOpen = true">
        {% render 'icon-ham-menu-open' %}
      </div>
      <div class="header__menu--menu-links">
        <!-- Main menu -->
        {% for link in linklists.main-menu.links -%}
          {{ link.title | link_to: link.url }}
        {%- endfor %}
      </div>
    </div>
    <div class="header__menu-logo">
      {% render 'mclaren-logo' %}
    </div>
  </div>
</div>