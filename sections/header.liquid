<div class="header" x-data="{ hamMenuOpen: false }">
  <div class="opacity-black-bg" x-show="hamMenuOpen">
    <div class="ham-menu">
      <div class="ham-menu__close-ham-icon" x-on:click="hamMenuOpen = false">
        {% render 'icon-ham-menu-close' %}
      </div>
      <div class="ham-menu__menu-links">
        <!-- Main menu inside ham-menu -->
        {% for link in linklists.main-menu.links -%}
          {{ link.title | link_to: link.url }}
        {%- endfor %}
      </div>
      <div class="ham-menu__footer-links">
        <!-- Footer menu inside ham-menu -->
        {% for link in linklists.footer.links -%}
          {{ link.title | link_to: link.url }}
        {%- endfor %}
        {% for link in linklists.footer-second-menu.links limit: 2 -%}
          {{ link.title | link_to: link.url }}
        {%- endfor %}
      </div>
    </div>
  </div>

  <div class="header__annbar">
    <div class="header__annbar--middle-col">
      <p>ğŸšš free delivery over $90</p>
    </div>

    <div class="header__annbar--right-col">
      <div class="header__annbar--login">
        {% render 'flag-uk' %}
        {% render 'icon-login' %}
        <p>LOGIN</p>
      </div>

      <div class="header__annbar--cart-wrapper">
        <div class="header__annbar--cart">
          {% render 'icon-cart' %}
        </div>
        <div class="header__annbar--cart-count">
          <span>0</span>
        </div>
      </div>
    </div>
  </div>


  <div class="header__menu">

    <div class="header__menu--main-menu">
      <div class="header__menu-ham" x-on:click="hamMenuOpen = true">
        {% render 'icon-ham-menu' %}
      </div>

      <div class="header__menu--menu-links">
        <!-- Main menu -->
        {% for link in linklists.main-menu.links -%}
          {{ link.title | link_to: link.url }}
        {%- endfor %}
      </div>
    </div>

    <div class="header__menu-logo">
      {% render 'mclaren-logo' %}
    </div>

  </div>


</div>